<table>
  <tr>
    <th>Title</th>
    <th>Routes</th>
    <th colspan="2"></th>
  </tr>
 
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.name %></td>
      <td><%= route.places %></td>
      <td><%= link_to 'Show', route_path(route) %></td>
      <td><%= link_to 'Edit', edit_route_path(route) %></td>
      <td><%= link_to 'Destroy', route_path(route),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>